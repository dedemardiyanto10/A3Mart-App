<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    android:padding="24dp"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:layout_height="6dp"
        android:layout_width="50dp"
        android:layout_marginBottom="24dp"
        app:cardElevation="1dp"
        app:cardBackgroundColor="?attr/colorOnSurfaceVariant"
        style="?attr/materialCardViewFilledStyle"
        app:cardCornerRadius="24dp"
        android:layout_gravity="center_horizontal">

    </com.google.android.material.card.MaterialCardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mode Tampilan"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rg_theme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_sistem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ikuti Sistem" />
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_siang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Siang" />
                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rb_malam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Malam" />
            </RadioGroup>

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_ontime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Jangan Matikan Layar" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kunci Aplikasi"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_fingerprint"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                android:text="Keamanan Sidik Jari / PIN" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifikasi &amp; Alert"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_lunas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Notifikasi Lunas" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_lowStokAlert"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peringatan Stok Menipis" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_toast"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Tampilkan Pesan Toast" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="16dp"
                android:background="?android:attr/listDivider" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tentang"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_reset_app"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="#F44336"
                    android:layout_margin="4dp"
                    app:strokeColor="#F44336"
                    android:textStyle="bold"
                    android:text="Hapus Data Aplikasi" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_info_app"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:layout_margin="4dp"
                    android:text="Info Aplikasi" />
            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
</LinearLayout>
